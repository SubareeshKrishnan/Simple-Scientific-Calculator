<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/lower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="4"
            android:background="@drawable/ripple"
            android:text="."
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#f5f5f5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="4"
            android:background="@drawable/ripple"
            android:text="0"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#f5f5f5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/tenpower"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="4"
            android:background="@drawable/ripple"
            android:text="CE"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#f5f5f5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="4"
            android:background="@drawable/ripple"
            android:backgroundTint="#E91E1E"
            android:text="="
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#f5f5f5"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondlower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lower"
        android:layout_weight="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:text="7"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:text="8"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:text="9"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:backgroundTint="#e0e0e0"
            android:text="+"
            android:textAlignment="center"
            android:textColor="#0d0d0d"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdlower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/secondlower"
        android:layout_alignParentBottom="false"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:text="4"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:text="5"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:text="6"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:backgroundTint="#e0e0e0"
            android:text="-"
            android:textAlignment="center"
            android:textColor="#0d0d0d"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourthlast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/thirdlower"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:text="2"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:text="3"
            android:textAlignment="center"
            android:textColor="#f5f5f5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:backgroundTint="#e0e0e0"
            android:text="*"
            android:textAlignment="center"
            android:textColor="#0d0d0d"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifthlower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fourthlast"
        android:orientation="horizontal">

        <Button
            android:id="@+id/open"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:backgroundTint="#e0e0e0"
            android:text="("
            android:textColor="#0d0d0d"
            android:textSize="20sp" />

        <Button
            android:id="@+id/close"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:backgroundTint="#e0e0e0"
            android:text=")"
            android:textColor="#0d0d0d"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/clear_del"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:backgroundTint="#e0e0e0"
            android:scaleType="center"
            android:src="@drawable/backspace"
            android:textColor="#0d0d0d"
            android:textSize="20sp" />

        <Button
            android:id="@+id/divide"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:backgroundTint="#e0e0e0"
            android:text="/"
            android:textColor="#0d0d0d"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fifthlower"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            app:cardBackgroundColor="#0d0d0d">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/Expression"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="start"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColor="#B3F5F5F5"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/Result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColor="#f5f5f5"
                    android:textSize="35dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>